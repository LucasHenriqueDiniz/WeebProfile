{
  "search.exclude": {
    // DependÃªncias e builds
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.next/**": true,
    "**/.vercel/**": true,
    "**/.turbo/**": true,

    // Outras pastas comuns
    "**/.git/**": true,
    "**/.DS_Store": true,
    "**/coverage/**": true,
    "**/.nyc_output/**": true,
    "**/build/**": true,
    "**/out/**": true,

    // Arquivos de lock e cache
    "**/pnpm-lock.yaml": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/.cache/**": true
  },

  "files.exclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.next/**": true,
    "**/.vercel/**": true,
    "**/.turbo/**": true,
    "**/.git/**": true,
    "**/.DS_Store": true,
    "**/coverage/**": true,
    "**/.nyc_output/**": true,
    "**/build/**": true,
    "**/out/**": true,
    "**/pnpm-lock.yaml": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/.cache/**": true
  },

  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.next/**": true
  },

  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.useAliasesForRenames": false
}
