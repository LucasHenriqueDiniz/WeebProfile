{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Check lint and prettier",
      "type": "shell",
      "command": "yarn check:lint && yarn check:prettier",
      "problemMatcher": []
    },
    {
      "label": "Fix lint and prettier",
      "type": "shell",
      "command": "yarn format",
      "problemMatcher": []
    },
    {
      "label": "WEB-CLIENT: next dev",
      "type": "shell",
      "command": "yarn vercel:dev",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "WEB-CLIENT: next build",
      "type": "shell",
      "command": "yarn vercel:build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "CORE: Start",
      "type": "shell",
      "command": "yarn action:start",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "CORE: setup-fonts",
      "type": "shell",
      "command": "yarn setup-fonts",
      "options": {
        "cwd": "${workspaceFolder}/core"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Generate README",
      "type": "shell",
      "command": "yarn generate:readme",
      "group": "build",
      "problemMatcher": []
    }
  ]
}
